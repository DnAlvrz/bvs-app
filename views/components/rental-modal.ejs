<!-- Modal -->
<div class="modal modal-lg fade" id="rentalModal" tabindex="-1" aria-labelledby="rentalModal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable"">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="rentalFormTitle">Rental Form</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/rentals" method="POST" id="rentalForm">
            <div class="row mb-2">
            <input type="hidden" class="form-control" id="rentalId" name="id">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="catgory">Customers</label>
                  <select name="customerId" id="category" class="form-select" required>
                    <%customers.forEach(customer=>{%>
                      <option value="<%= customer._id%>"><%= customer.givenName%><%= customer.middleName%> <%= customer.lastName%></option>
                    <%})%>
                  </select>
                </div>
                <div class="form-group">
                  <label for="video">Videos</label>
                  <select 
                    onchange="updateRentDetails()" 
                    name="videoId" id="video" 
                    class="form-select" 
                    required
                  >
                  <%videos.forEach(video=>{%>
                      <option value="<%= video._id%>"><%= video.title%></option>
                    <%})%>
                  </select>
                </div>
            </div>
            <div class="row mb-2">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="catgory">Rent Price</label>
                  <input class="form-control"readonly id="rentPrice">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="catgory">Due</label>
                  <input class="form-control" readonly id="rentPrice">
                </div>
              </div>
            </div>
            
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  </div>
  <!--End of modal-->
  